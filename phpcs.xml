<?xml version="1.0"?>
<ruleset name="DFCU">
    <description>DFCU coding standards.</description>

    <arg name="basepath" value="." />

    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>resources</file>
    <file>routes</file>

    <rule ref="PSR2">
        <exclude name="PSR2.Classes.ClassDeclaration"/>
        <exclude name="PSR2.Methods.FunctionCallSignature"/>
        <exclude name="PSR2.ControlStructures.ControlStructureSpacing"/>
    </rule>

    <rule ref="Generic.Files.LineLength"> 
        <properties> <property name="lineLimit" value="120"/> 
        <property name="absoluteLineLimit" value="0"/></properties> 
    </rule> 
</ruleset>
